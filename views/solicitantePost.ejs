<%- include('templates/head', {TituloPrincipal:'Registrar Solicitante'}) %>
<body>
    <%- include('templates/nav') %>
    <div class="tituloLogin">
        <h2><%= title %></h2>
    </div>
    <div class="containerLogin">
        <form action="/solicitantes/agregar" method="post">
      
          <label for="nombre_apellido">Nombre y Apellido</label>
          <input type="text" name="nombre_apellido" placeholder="Ingresa su nombre y apellido..." class="text1">

          <label for="CI">Cédula de Identidad</label>
          <input type="text" name="CI" placeholder="Ingresa la CI del solicitante..." class="text1">
          
          <label for="usuario_unico">Usuario</label>
          <input type="text" name="usuario_unico" placeholder="Ingresa un usuario único..." class="text1">

          <label for="contrasena">Contraseña</label>
          <input type="password" name="contrasena" placeholder="Ingresa una contraseña..." class="text1">
      
          <label for="direccion">Dirreción</label>
          <input type="text" name="direccion" placeholder="Ingresa su dirección..." class="text1">

          <label for="fecha_nacimiento">Fecha de Nacimiento</label>
          <input type="date" name="fecha_nacimiento" placeholder="Ingresa su fecha de nacimiento..." class="text1">

          <label for="nro_telefono">Contacto / Número de Teléfono</label>
          <input type="text" name="nro_telefono" placeholder="Ingresa un número celular donde podamos comunicarnos..." class="text1">

          <input type="submit" value="¡Añadir!" class="buttonLogin2">
      
        </form>
    </div>
</body>
</html>